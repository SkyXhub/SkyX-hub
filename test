--[[    
    SkyX UI Executor Ready Version
    - Uses direct web loading instead of local files
    - Fixed icons from SkyX-hub repository
    - Complete game UI demonstration
]]

-- Load the Orion UI library directly from the web
-- This version already has the SkyX-hub icons integrated
local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/SkyXhub/OrionX-UI/refs/heads/main/OrionX-UI'))()

-- Create the main window
local Window = OrionLib:MakeWindow({
    Name = "SkyX Executor Demo",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "SkyXIcons", 
    IntroEnabled = true,
    IntroText = "SkyX Hub",
    IntroIcon = "sword", -- Using your sword icon for intro
    Icon = "star" -- Using your star icon for window
})

-- Main tab using home icon
local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "home", -- From your icon.json
    PremiumOnly = false
})

-- About section
local AboutSection = MainTab:AddSection({
    Name = "About SkyX Hub"
})

AboutSection:AddParagraph("SkyX Icon Library", "This demo showcases all the icons available in your custom icon.json file")

-- Main features section
local FeaturesSection = MainTab:AddSection({
    Name = "Game Features"
})

-- Add toggles with icons in callbacks
FeaturesSection:AddToggle({
    Name = "ESP Players",
    Default = false,
    Callback = function(Value)
        OrionLib:MakeNotification({
            Name = Value and "ESP Enabled" or "ESP Disabled",
            Content = Value and "Players are now visible through walls" or "Players are no longer visible through walls",
            Image = Value and "check-circle" or "x-circle", -- Using your icon.json icons
            Time = 3
        })
    end
})

FeaturesSection:AddToggle({
    Name = "Lock Items",
    Default = true,
    Callback = function(Value)
        OrionLib:MakeNotification({
            Name = Value and "Items Locked" or "Items Unlocked",
            Content = Value and "Your items are now protected" or "Your items can now be modified",
            Image = Value and "lock" or "unlock", -- Using your icon.json icons
            Time = 3
        })
    end
})

-- Add buttons using custom icons in notifications
FeaturesSection:AddButton({
    Name = "Collect Rewards",
    Callback = function()
        OrionLib:MakeNotification({
            Name = "Rewards Collected",
            Content = "You received 500 coins and 2 special items",
            Image = "gift", -- Using your gift icon
            Time = 5
        })
    end
})

FeaturesSection:AddButton({
    Name = "Teleport to Marker",
    Callback = function()
        OrionLib:MakeNotification({
            Name = "Teleporting",
            Content = "You have been teleported to your marker",
            Image = "map-pin", -- Using your map-pin icon
            Time = 5
        })
    end
})

-- Create Combat tab with sword icon
local CombatTab = Window:MakeTab({
    Name = "Combat",
    Icon = "sword", -- Using your sword icon
    PremiumOnly = false
})

-- Add combat options
CombatTab:AddToggle({
    Name = "Auto Parry",
    Default = false,
    Callback = function(Value)
        print("Auto Parry:", Value)
    end
})

CombatTab:AddToggle({
    Name = "Shield Mode",
    Default = false,
    Callback = function(Value)
        OrionLib:MakeNotification({
            Name = Value and "Shield Activated" or "Shield Deactivated",
            Content = Value and "You're now protected from attacks" or "Your shield is down",
            Image = "shield", -- Using your shield icon
            Time = 3
        })
    end
})

-- Create Settings tab with settings icon
local SettingsTab = Window:MakeTab({
    Name = "Settings",
    Icon = "settings", -- From your icon.json
    PremiumOnly = false
})

-- Theme section
local ThemeSection = SettingsTab:AddSection({
    Name = "Theme Settings"
})

-- Available themes
local themes = {"Default", "Dark", "Light", "Ocean", "Blood"}

-- Add theme buttons
for _, themeName in pairs(themes) do
    ThemeSection:AddButton({
        Name = "Set " .. themeName .. " Theme",
        Callback = function()
            OrionLib.Themes:SetTheme(themeName)
            OrionLib:MakeNotification({
                Name = "Theme Changed",
                Content = "Switched to " .. themeName .. " theme",
                Image = "check", -- From your icon.json
                Time = 3
            })
        end
    })
end

-- User section
local UserSection = SettingsTab:AddSection({
    Name = "User Settings"
})

UserSection:AddButton({
    Name = "Manage Account",
    Callback = function()
        OrionLib:MakeNotification({
            Name = "Account Manager",
            Content = "Opening account settings...",
            Image = "user", -- Using your user icon
            Time = 3
        })
    end
})

UserSection:AddButton({
    Name = "Invite Friends",
    Callback = function()
        OrionLib:MakeNotification({
            Name = "Friend System",
            Content = "Opening friend invite menu...",
            Image = "users", -- Using your users icon
            Time = 3
        })
    end
})

-- Create icon showcase tab
local IconsTab = Window:MakeTab({
    Name = "Icons Demo",
    Icon = "star", -- From your icon.json
    PremiumOnly = false
})

-- Group icons by categories
local iconGroups = {
    {name = "Navigation", icons = {"home", "settings", "search", "menu", "arrow-right", "arrow-left", "map-pin"}},
    {name = "Actions", icons = {"check", "plus", "minus", "close", "minimize", "maximize", "trash"}},
    {name = "Game Elements", icons = {"sword", "shield", "heart", "star", "tree", "gift", "key"}},
    {name = "Status & Alerts", icons = {"alert", "info", "check-circle", "x-circle", "lock", "unlock"}},
    {name = "Users", icons = {"user", "users"}}
}

-- Create sections for each icon group
for _, group in pairs(iconGroups) do
    local IconSection = IconsTab:AddSection({
        Name = group.name .. " Icons"
    })
    
    -- Add buttons for each icon in the group
    for _, iconName in pairs(group.icons) do
        IconSection:AddButton({
            Name = iconName,
            Callback = function()
                OrionLib:MakeNotification({
                    Name = "Icon: " .. iconName,
                    Content = "This notification uses the " .. iconName .. " icon",
                    Image = iconName,
                    Time = 3
                })
            end
        })
    end
end

-- Initialize the library
OrionLib:Init()
