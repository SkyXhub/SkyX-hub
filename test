--[[
    SkyX Executor-Ready Script with SkyXBlue Theme
    This script is designed for direct use in Roblox executors
    Author: SkyXhub
    Version: 1.0.0
]]

-- Load OrionLib using the standard loading pattern
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/SkyXhub/OrionX-UI/refs/heads/main/OrionX-UI')))()

-- Simple notification that the library has loaded
pcall(function()
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "SkyX Hub",
        Text = "Library loaded successfully",
        Duration = 3
    })
end)

-- Create window with SkyXBlue theme
local Window = OrionLib:MakeWindow({
    Name = "SkyX Hub",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "SkyXExecutor",
    IntroEnabled = true,
    IntroText = "SkyX Hub",
    IntroIcon = "rbxassetid://10618644218", -- SkyX logo
    Icon = "rbxassetid://10618644218"
})

-- Set the theme to SkyXBlue
OrionLib:SetTheme("SkyXBlue")

-- Create main tab
local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "home", -- Using built-in icon
    PremiumOnly = false
})

-- Add a welcome section
local WelcomeSection = MainTab:AddSection({
    Name = "Welcome to SkyX Hub"
})

-- Show game info
WelcomeSection:AddParagraph("Game Information", "Game: " .. game:GetService("MarketplaceService"):GetProductInfo(game.PlaceId).Name .. "\nPlace ID: " .. game.PlaceId)

-- Add user info
local playerName = game.Players.LocalPlayer.Name
local playerDisplayName = game.Players.LocalPlayer.DisplayName
WelcomeSection:AddParagraph("User Information", "Username: " .. playerName .. "\nDisplay Name: " .. playerDisplayName)

-- Create a features section
local FeaturesSection = MainTab:AddSection({
    Name = "Features"
})

-- Add some basic features common in most executors
FeaturesSection:AddToggle({
    Name = "ESP Players",
    Default = false,
    Callback = function(Value)
        -- ESP implementation would go here
        OrionLib:MakeNotification({
            Name = "Feature Toggled",
            Content = "ESP Players: " .. (Value and "Enabled" or "Disabled"),
            Image = "info",
            Time = 3
        })
    end
})

FeaturesSection:AddToggle({
    Name = "Infinite Jump",
    Default = false,
    Callback = function(Value)
        -- Basic infinite jump implementation
        _G.InfiniteJump = Value
        
        if _G.InfiniteJumpConnection then
            _G.InfiniteJumpConnection:Disconnect()
            _G.InfiniteJumpConnection = nil
        end
        
        if Value then
            _G.InfiniteJumpConnection = game:GetService("UserInputService").JumpRequest:Connect(function()
                if _G.InfiniteJump then
                    game:GetService("Players").LocalPlayer.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
                end
            end)
        end
        
        OrionLib:MakeNotification({
            Name = "Feature Toggled",
            Content = "Infinite Jump: " .. (Value and "Enabled" or "Disabled"),
            Image = "info",
            Time = 3
        })
    end
})

FeaturesSection:AddSlider({
    Name = "WalkSpeed",
    Min = 16,
    Max = 500,
    Default = 16,
    Color = Color3.fromRGB(80, 170, 255), -- SkyXBlue color
    Increment = 1,
    ValueName = "Speed",
    Callback = function(Value)
        -- Set the player's walkspeed
        pcall(function()
            game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
        end)
    end    
})

FeaturesSection:AddSlider({
    Name = "JumpPower",
    Min = 50,
    Max = 500,
    Default = 50,
    Color = Color3.fromRGB(80, 170, 255), -- SkyXBlue color
    Increment = 1,
    ValueName = "Power",
    Callback = function(Value)
        -- Set the player's jump power
        pcall(function()
            game.Players.LocalPlayer.Character.Humanoid.JumpPower = Value
        end)
    end    
})

-- Create a teleport section
local TeleportSection = MainTab:AddSection({
    Name = "Teleport"
})

-- Add player list to teleport to
local playerList = {}
for _, player in pairs(game.Players:GetPlayers()) do
    if player ~= game.Players.LocalPlayer then
        table.insert(playerList, player.Name)
    end
end

TeleportSection:AddDropdown({
    Name = "Teleport to Player",
    Default = "",
    Options = playerList,
    Callback = function(Value)
        -- Teleport to the selected player
        local targetPlayer = game.Players:FindFirstChild(Value)
        if targetPlayer and targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") and game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = targetPlayer.Character.HumanoidRootPart.CFrame
            
            OrionLib:MakeNotification({
                Name = "Teleport",
                Content = "Teleported to " .. Value,
                Image = "check",
                Time = 3
            })
        else
            OrionLib:MakeNotification({
                Name = "Teleport Failed",
                Content = "Could not teleport to " .. Value,
                Image = "error",
                Time = 3
            })
        end
    end    
})

-- Create utility tab
local UtilityTab = Window:MakeTab({
    Name = "Utility",
    Icon = "settings", -- Using built-in icon
    PremiumOnly = false
})

-- Add a settings section
local SettingsSection = UtilityTab:AddSection({
    Name = "Settings"
})

-- Add theme selector
local themes = {"Default", "Dark", "Light", "Ocean", "Blood", "SkyXBlue", "Blurple", "Emerald", "Cyberpunk"}
SettingsSection:AddDropdown({
    Name = "UI Theme",
    Default = "SkyXBlue",
    Options = themes,
    Callback = function(Value)
        -- Change the UI theme
        OrionLib:SetTheme(Value)
        
        OrionLib:MakeNotification({
            Name = "Theme Changed",
            Content = "UI Theme set to " .. Value,
            Image = "palette",
            Time = 3
        })
    end    
})

-- Add about section
local AboutSection = UtilityTab:AddSection({
    Name = "About"
})

AboutSection:AddParagraph("SkyX Hub", "Version: 1.0.0\nDeveloped by: SkyXhub\nExecutor-ready script with SkyXBlue theme\nThanks for using SkyX Hub!")

-- Add a credits button
AboutSection:AddButton({
    Name = "Credits",
    Callback = function()
        OrionLib:MakeNotification({
            Name = "Credits",
            Content = "UI Library: Orion (Modified)\nTheme: SkyXBlue\nDeveloped by SkyXhub",
            Image = "info",
            Time = 5
        })
    end    
})

-- Add a discord button that copies the invite
AboutSection:AddButton({
    Name = "Join Discord",
    Callback = function()
        -- This is a placeholder Discord invite, replace with your actual Discord
        setclipboard("https://discord.gg/skyx")
        
        OrionLib:MakeNotification({
            Name = "Discord Invite",
            Content = "Discord invite copied to clipboard!",
            Image = "discord",
            Time = 5
        })
    end    
})

-- Initialize the library
OrionLib:Init()
