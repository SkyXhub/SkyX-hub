--[[
    SkyX UI Library Demo
    
    This script demonstrates the features of our custom SkyX UI Library
]]

-- Load the SkyX UI Library
local SkyXUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/SkyXhub/SkyX-hub/refs/heads/main/SkyX%20UI%20Library.lua"))()

-- Create a window
local Window = SkyXUI:CreateWindow({
    Title = "SkyX UI Demo",
    Position = UDim2.new(0.5, -300, 0.5, -200),
    Size = UDim2.new(0, 600, 0, 400),
    Theme = "Ocean" -- Available themes: Ocean, Dark, Light, Crimson, Forest
})

-- Create tabs
local HomeTab = Window:AddTab({
    Name = "Home",
    Icon = "rbxassetid://4483345998" -- Optional icon
})

local ControlsTab = Window:AddTab({
    Name = "Controls",
    Icon = "rbxassetid://4483345998"
})

local ThemesTab = Window:AddTab({
    Name = "Themes",
    Icon = "rbxassetid://4483345998"
})

local SettingsTab = Window:AddTab({
    Name = "Settings",
    Icon = "rbxassetid://4483345998"
})

-- Add content to the Home tab
local WelcomeSection = HomeTab:AddSection({
    Name = "Welcome"
})

WelcomeSection:AddLabel("Welcome to SkyX UI Library")
WelcomeSection:AddLabel("This is a demo of the available components")
WelcomeSection:AddSeparator()
WelcomeSection:AddLabel("Use the tabs to explore different features")

-- Add a buttons section
local ButtonsSection = ControlsTab:AddSection({
    Name = "Buttons"
})

ButtonsSection:AddButton({
    Text = "Regular Button",
    Callback = function()
        SkyXUI:Notify({
            Title = "Button Clicked",
            Text = "You clicked the regular button!",
            Duration = 3,
            Type = "Info"
        })
    end
})

ButtonsSection:AddButton({
    Text = "Action Button",
    Callback = function()
        SkyXUI:Notify({
            Title = "Action Performed",
            Text = "Action completed successfully!",
            Duration = 3,
            Type = "Success"
        })
    end
})

-- Add a toggles section
local TogglesSection = ControlsTab:AddSection({
    Name = "Toggles"
})

local autoFarmToggle = TogglesSection:AddToggle({
    Text = "Auto Farm",
    Default = false,
    Callback = function(value)
        SkyXUI:Notify({
            Title = "Toggle Changed",
            Text = "Auto Farm: " .. (value and "Enabled" or "Disabled"),
            Duration = 3,
            Type = value and "Success" or "Info"
        })
    end
})

local espToggle = TogglesSection:AddToggle({
    Text = "ESP",
    Default = true,
    Callback = function(value)
        -- ESP functionality would go here
    end
})

-- Add a sliders section
local SlidersSection = ControlsTab:AddSection({
    Name = "Sliders"
})

local walkSpeedSlider = SlidersSection:AddSlider({
    Text = "Walk Speed",
    Min = 16,
    Max = 100,
    Default = 16,
    Callback = function(value)
        -- Set walk speed functionality would go here
    end
})

local jumpPowerSlider = SlidersSection:AddSlider({
    Text = "Jump Power",
    Min = 50,
    Max = 200,
    Default = 50,
    Callback = function(value)
        -- Set jump power functionality would go here
    end
})

-- Add a dropdowns section
local DropdownsSection = ControlsTab:AddSection({
    Name = "Dropdowns"
})

local weaponDropdown = DropdownsSection:AddDropdown({
    Text = "Select Weapon",
    Items = {"Sword", "Gun", "Bow", "Magic Staff", "Dagger"},
    Default = "Sword",
    Callback = function(value)
        SkyXUI:Notify({
            Title = "Weapon Selected",
            Text = "You selected: " .. value,
            Duration = 3,
            Type = "Info"
        })
    end
})

-- Add a textbox section
local TextboxSection = ControlsTab:AddSection({
    Name = "Textboxes"
})

local nameTextbox = TextboxSection:AddTextbox({
    Text = "Your Name",
    Placeholder = "Enter your name...",
    Default = "",
    Callback = function(value, enterPressed)
        if enterPressed then
            SkyXUI:Notify({
                Title = "Name Changed",
                Text = "Hello, " .. value .. "!",
                Duration = 3,
                Type = "Info"
            })
        end
    end
})

-- Add a color picker section
local ColorSection = ControlsTab:AddSection({
    Name = "Color Pickers"
})

local colorPicker = ColorSection:AddColorPicker({
    Text = "UI Accent Color",
    Default = Color3.fromRGB(0, 120, 215),
    Callback = function(color)
        -- Color picker functionality would go here
    end
})

-- Add theme switcher
local ThemeSection = ThemesTab:AddSection({
    Name = "Theme Selection"
})

ThemeSection:AddButton({
    Text = "Ocean Theme",
    Callback = function()
        SkyXUI:SetTheme("Ocean")
        SkyXUI:Notify({
            Title = "Theme Changed",
            Text = "Theme set to Ocean",
            Duration = 3,
            Type = "Info"
        })
    end
})

ThemeSection:AddButton({
    Text = "Dark Theme",
    Callback = function()
        SkyXUI:SetTheme("Dark")
        SkyXUI:Notify({
            Title = "Theme Changed",
            Text = "Theme set to Dark",
            Duration = 3,
            Type = "Info"
        })
    end
})

ThemeSection:AddButton({
    Text = "Light Theme",
    Callback = function()
        SkyXUI:SetTheme("Light")
        SkyXUI:Notify({
            Title = "Theme Changed",
            Text = "Theme set to Light",
            Duration = 3,
            Type = "Info"
        })
    end
})

ThemeSection:AddButton({
    Text = "Crimson Theme",
    Callback = function()
        SkyXUI:SetTheme("Crimson")
        SkyXUI:Notify({
            Title = "Theme Changed",
            Text = "Theme set to Crimson",
            Duration = 3,
            Type = "Info"
        })
    end
})

ThemeSection:AddButton({
    Text = "Forest Theme",
    Callback = function()
        SkyXUI:SetTheme("Forest")
        SkyXUI:Notify({
            Title = "Theme Changed",
            Text = "Theme set to Forest",
            Duration = 3,
            Type = "Info"
        })
    end
})

-- Add settings
local SettingsSection = SettingsTab:AddSection({
    Name = "UI Settings"
})

local roundedCornersToggle = SettingsSection:AddToggle({
    Text = "Rounded Corners",
    Default = true,
    Callback = function(value)
        -- In a real implementation, this would update the UI
        -- but for this demo, we'll just show a notification
        SkyXUI:Notify({
            Title = "Setting Changed",
            Text = "Rounded corners: " .. (value and "Enabled" or "Disabled") .. "\n(Requires restart)",
            Duration = 3,
            Type = "Info"
        })
    end
})

local enableSoundsToggle = SettingsSection:AddToggle({
    Text = "UI Sounds",
    Default = true,
    Callback = function(value)
        SkyXUI:Notify({
            Title = "Setting Changed",
            Text = "UI sounds: " .. (value and "Enabled" or "Disabled"),
            Duration = 3,
            Type = "Info"
        })
    end
})

-- Credits section
local CreditsSection = SettingsTab:AddSection({
    Name = "Credits"
})

CreditsSection:AddLabel("SkyX UI Library v1.0.0")
CreditsSection:AddLabel("Created by SkyX Team")
CreditsSection:AddSeparator()
CreditsSection:AddButton({
    Text = "Copy Discord Invite",
    Callback = function()
        setclipboard("https://discord.gg/ugyvkJXhFh")
        SkyXUI:Notify({
            Title = "Discord Invite",
            Text = "Discord invite copied to clipboard!",
            Duration = 3,
            Type = "Success"
        })
    end
})

-- Show a welcome notification
SkyXUI:Notify({
    Title = "SkyX UI Library",
    Text = "Welcome to the SkyX UI Library Demo!",
    Duration = 5,
    Type = "Info"
})

-- Return the UI library for other scripts to use
return SkyXUI
