--[[
    ðŸŒŠ SkyX Hub - Modern UI Demo ðŸŒŠ
ddd    
    This script demonstrates the Modern UI without requiring a Roblox game
    It's useful for testing UI functionality in any executor
]]

-- Load SkyX Modern UI Library
local SkyXModern = loadstring(game:HttpGet('https://raw.githubusercontent.com/SkyX-Scripts/SkyX/main/UI/SkyXModern.lua'))()

-- Create Window with custom theme
local Window = SkyXModern:CreateWindow({
    Name = "SkyX Hub Demo",
    LoadingTitle = "SkyX Hub",
    LoadingSubtitle = "Modern UI Demo",
    ConfigurationSaving = {
        Enabled = false
    },
    Theme = {
        BackgroundColor = Color3.fromRGB(18, 18, 24),
        SidebarColor = Color3.fromRGB(24, 24, 34),
        ContainerColor = Color3.fromRGB(30, 30, 40),
        HighlightColor = Color3.fromRGB(85, 125, 255),
        TextColor = Color3.fromRGB(240, 240, 245),
        SubTextColor = Color3.fromRGB(180, 180, 190),
        HeadingColor = Color3.fromRGB(255, 255, 255),
        ButtonColor = Color3.fromRGB(40, 40, 55),
        ButtonHoverColor = Color3.fromRGB(50, 50, 70),
        ToggleOffColor = Color3.fromRGB(60, 60, 80),
        ToggleOnColor = Color3.fromRGB(85, 125, 255),
        SliderBackgroundColor = Color3.fromRGB(40, 40, 60),
        SliderFilledColor = Color3.fromRGB(85, 125, 255),
        BorderColor = Color3.fromRGB(50, 50, 70),
        TabColor = Color3.fromRGB(30, 30, 45),
        TabActiveColor = Color3.fromRGB(85, 125, 255),
        InputBackgroundColor = Color3.fromRGB(30, 30, 45),
        DropdownColor = Color3.fromRGB(30, 30, 45),
        ErrorColor = Color3.fromRGB(255, 85, 85),
        SuccessColor = Color3.fromRGB(85, 255, 127),
        WarningColor = Color3.fromRGB(255, 185, 85)
    }
})

-- Create tabs with modern icons
local MainTab = Window:CreateTab({
    Name = "Buttons",
    Icon = "rbxassetid://7733658133" -- Dashboard icon
})

local TogglesTab = Window:CreateTab({
    Name = "Toggles",
    Icon = "rbxassetid://7733911690" -- Toggle icon
})

local SlidersTab = Window:CreateTab({
    Name = "Sliders",
    Icon = "rbxassetid://7734053495" -- Sliders icon
})

local DropdownsTab = Window:CreateTab({
    Name = "Dropdowns",
    Icon = "rbxassetid://7743877054" -- List icon
})

-- Main Tab Content
local ButtonSection = MainTab:CreateSection("Button Examples")

-- Add some buttons
local Button1 = ButtonSection:CreateButton({
    Name = "Print Hello",
    Callback = function()
        print("Hello from Button 1!")
    end
})

local Button2 = ButtonSection:CreateButton({
    Name = "Change Button Text",
    Callback = function()
        Button1:Update("Button Updated")
        print("Button text updated!")
    end
})

local Button3 = ButtonSection:CreateButton({
    Name = "Reset Button Text",
    Callback = function()
        Button1:Update("Print Hello")
        print("Button text reset!")
    end
})

-- Create info section
local InfoSection = MainTab:CreateSection("UI Information")

InfoSection:CreateButton({
    Name = "How to Close UI",
    Callback = function()
        print("Press Right Control to toggle the UI visibility")
        print("On mobile, use the blue floating button to toggle")
    end
})

-- Toggles Tab Content
local ToggleSection = TogglesTab:CreateSection("Toggle Examples")

local Toggle1 = ToggleSection:CreateToggle({
    Name = "Print Toggle State",
    Default = false,
    Callback = function(Value)
        print("Toggle 1 is now:", Value)
    end
})

local Toggle2 = ToggleSection:CreateToggle({
    Name = "Control Other Toggle",
    Default = false,
    Callback = function(Value)
        Toggle1:SetState(Value)
        print("Controlling Toggle 1 to:", Value)
    end
})

local Toggle3 = ToggleSection:CreateToggle({
    Name = "Always On Toggle",
    Default = true,
    Callback = function(Value)
        print("This toggle is always on!")
        if not Value then
            Toggle3:SetState(true)
        end
    end
})

-- Sliders Tab Content
local SliderSection = SlidersTab:CreateSection("Slider Examples")

local Slider1 = SliderSection:CreateSlider({
    Name = "Basic Slider",
    Min = 0,
    Max = 100,
    Default = 50,
    Increment = 1,
    Callback = function(Value)
        print("Slider 1 value:", Value)
    end
})

local Slider2 = SliderSection:CreateSlider({
    Name = "Precise Slider",
    Min = 0,
    Max = 1,
    Default = 0.5,
    Increment = 0.01,
    Callback = function(Value)
        print("Precise slider value:", Value)
    end
})

local SliderControlSection = SlidersTab:CreateSection("Slider Controls")

SliderControlSection:CreateButton({
    Name = "Reset Sliders",
    Callback = function()
        Slider1:SetValue(50)
        Slider2:SetValue(0.5)
        print("Sliders reset to default values!")
    end
})

-- Dropdowns Tab Content
local DropdownSection = DropdownsTab:CreateSection("Dropdown Examples")

local options = {"Option 1", "Option 2", "Option 3", "Option 4", "Option 5"}

local Dropdown1 = DropdownSection:CreateDropdown({
    Name = "Basic Dropdown",
    Options = options,
    Default = "Option 1",
    Callback = function(Option)
        print("Selected option:", Option)
    end
})

local DropdownControlSection = DropdownsTab:CreateSection("Dropdown Controls")

DropdownControlSection:CreateButton({
    Name = "Set to Option 3",
    Callback = function()
        Dropdown1:SetValue("Option 3")
        print("Dropdown set to Option 3!")
    end
})

local newOptions = {"New Option 1", "New Option 2", "New Option 3"}

DropdownControlSection:CreateButton({
    Name = "Change Options",
    Callback = function()
        Dropdown1:UpdateOptions(newOptions)
        print("Dropdown options changed!")
    end
})

DropdownControlSection:CreateButton({
    Name = "Reset Options",
    Callback = function()
        Dropdown1:UpdateOptions(options)
        print("Dropdown options reset!")
    end
})

print("SkyX Modern UI Demo loaded successfully | Press Right Control to toggle UI")
