--[[
    Simple OrionX UI - Executor Ready
    A compact, enhanced UI script for Roblox exploits with no theme options
]]

-- Load the OrionX-UI Library
local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/SkyXhub/OrionX-UI/refs/heads/main/OrionX-UI.lua'))()

-- Initialize with default theme only
OrionLib:Init()

-- Create the main window
local Window = OrionLib:MakeWindow({
    Name = "SkyX Enhanced UI", 
    IntroEnabled = true,
    IntroText = "SkyX Enhanced UI",
    IntroIcon = "flower",
    Icon = "flower",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "SkyXConfig"
})

-- Main Tab
local MainTab = Window:MakeTab({
    Name = "Player",
    Icon = "person",
    PremiumOnly = false
})

-- Information
MainTab:AddParagraph("SkyX Enhanced UI", "This exploit UI features enhanced typography with GothamBold fonts, better spacing, and improved interactive elements.")

MainTab:AddButton({
    Name = "Show Notification",
    Callback = function()
        OrionLib:Notify("Enhanced UI", "You're using the improved OrionX-UI with better visuals!", "info", 5)
    end    
})

-- Player section
local PlayerSection = MainTab:AddSection({
    Name = "Player Features"
})

-- Walk Speed
PlayerSection:AddToggle({
    Name = "Speed Boost",
    Default = false,
    Flag = "speedToggle",
    Callback = function(Value)
        if Value then
            -- Apply speed boost
            if game.Players.LocalPlayer.Character and 
               game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
                
                -- Store original speed
                if not _G.OrigSpeed then
                    _G.OrigSpeed = game.Players.LocalPlayer.Character.Humanoid.WalkSpeed
                end
                
                -- Apply boost
                game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 50
            end
        else
            -- Restore original speed
            if game.Players.LocalPlayer.Character and 
               game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") and
               _G.OrigSpeed then
                
                game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = _G.OrigSpeed
            end
        end
    end
})

-- Jump Power
PlayerSection:AddSlider({
    Name = "Jump Power",
    Min = 50,
    Max = 250,
    Default = 50,
    Color = Color3.fromRGB(31, 120, 200),
    Increment = 1,
    Callback = function(Value)
        if game.Players.LocalPlayer.Character and 
           game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
            
            game.Players.LocalPlayer.Character.Humanoid.JumpPower = Value
        end
    end
})

-- UI Elements Tab
local UITab = Window:MakeTab({
    Name = "UI Elements",
    Icon = "settings",
    PremiumOnly = false
})

-- Dropdowns section
local DropdownSection = UITab:AddSection({
    Name = "Enhanced Dropdowns"
})

DropdownSection:AddDropdown({
    Name = "Select Game",
    Default = "Current",
    Options = {"Current", "Blox Fruits", "Adopt Me", "BedWars", "Pet Sim X"},
    Callback = function(Value)
        print("Game selected: " .. Value)
    end    
})

-- Multi-select dropdown with improved styling
DropdownSection:AddDropdown({
    Name = "Multi-Select",
    Default = "Option 1",
    Multiple = true,
    Options = {"Option 1", "Option 2", "Option 3", "Option 4"},
    Callback = function(Value)
        print("Multi-selection made")
    end    
})

-- Input controls with enhanced styling
local InputSection = UITab:AddSection({
    Name = "Enhanced Inputs"
})

InputSection:AddTextbox({
    Name = "Text Input",
    Default = "Type here...",
    TextDisappear = false,
    Callback = function(Value)
        print("Input text: " .. Value)
    end  
})

-- Keybind with improved visibility (32x32px)
InputSection:AddKeybind({
    Name = "Action Key",
    Default = Enum.KeyCode.E,
    Hold = false,
    Callback = function()
        OrionLib:Notify("Keybind", "Key pressed!", "bell", 2)
    end    
})

-- Hold-type keybind
InputSection:AddKeybind({
    Name = "Hold Action",
    Default = Enum.KeyCode.F,
    Hold = true,
    Callback = function(state)
        if state then
            print("Key is being held")
        else
            print("Key was released")
        end
    end    
})

-- Color picker with enhanced UI
local ColorSection = UITab:AddSection({
    Name = "Enhanced Colors"
})

ColorSection:AddColorpicker({
    Name = "UI Color",
    Default = Color3.fromRGB(50, 120, 200),
    Callback = function(Value)
        print("Color picked")
    end    
})

-- Mobile Tab
local MobileTab = Window:MakeTab({
    Name = "Mobile",
    Icon = "mobile",
    PremiumOnly = false
})

-- Mobile support section
local MobileSection = MobileTab:AddSection({
    Name = "Mobile Support"
})

MobileSection:AddToggle({
    Name = "Mobile Button",
    Default = true,
    Callback = function(Value)
        -- Enable/disable mobile toggle button
        OrionLib.ToggleMobileButton(Value)
    end
})

MobileSection:AddDropdown({
    Name = "Button Position",
    Default = "TopRight",
    Options = {"TopRight", "TopLeft", "BottomRight", "BottomLeft"},
    Callback = function(Value)
        -- Set mobile button position
        OrionLib.SetMobileButtonPosition(Value)
    end
})

-- Welcome notification
OrionLib:Notify("SkyX Enhanced UI", "Loaded with improved visuals & controls. Press RightControl to toggle.", "check", 5)
