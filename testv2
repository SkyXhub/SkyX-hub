--[[
    SkyX UI Library Demo
    
    This demo loads the SkyX UI Library directly from GitHub
    and shows how to create a basic UI with it.
]]

-- Load the library directly from GitHub
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/SkyXhub/SkyX-hub/refs/heads/main/SkyX%20UI%20Library.lua"))()

-- Create the Window
local Window = Library:CreateWindow("SkyX Demo UI", "", "Information", "rbxassetid://10618928818", false, "SkeetKey", "KeyBind")

-- Create Tabs
local HomeTab = Window:CreateTab("Home", "rbxassetid://8825051254")
local PlayerTab = Window:CreateTab("Player", "rbxassetid://11904757361")
local VisualsTab = Window:CreateTab("Visuals", "rbxassetid://13982380101")
local MiscTab = Window:CreateTab("Misc", "rbxassetid://13982352173")
local SettingsTab = Window:CreateTab("Settings", "rbxassetid://11746831823")

-- Home Tab
local WelcomeSection = HomeTab:CreateSection("Welcome")

-- Add a label
WelcomeSection:CreateLabel("Welcome to SkyX UI Library")

-- Add a button
WelcomeSection:CreateButton("Click Me", function()
    Library:Notification("Notification", "Button Clicked!", "OK")
end)

-- Add a toggle
local MyToggle = WelcomeSection:CreateToggle("Example Toggle", false, function(Value)
    print("Toggle value:", Value)
end)

-- Player Tab
local MovementSection = PlayerTab:CreateSection("Movement")

-- Add a slider
MovementSection:CreateSlider("Walk Speed", 16, 500, 16, 1, function(Value)
    print("Walk Speed set to:", Value)
end)

-- Add dropdowns
MovementSection:CreateDropdown("Teleport Location", {"Spawn", "Shop", "Volcano", "Desert"}, function(Option)
    print("Teleporting to:", Option)
end)

-- Visuals Tab
local ESPSection = VisualsTab:CreateSection("ESP Settings")

-- Add a colorpicker
ESPSection:CreateColorpicker("ESP Color", Color3.fromRGB(255, 255, 255), function(Color)
    print("ESP Color set to:", Color)
end)

-- Add multiple toggles
ESPSection:CreateToggle("Box ESP", false, function(Value)
    print("Box ESP:", Value)
end)

ESPSection:CreateToggle("Name ESP", false, function(Value)
    print("Name ESP:", Value)
end)

ESPSection:CreateToggle("Health ESP", false, function(Value)
    print("Health ESP:", Value)
end)

-- Misc Tab  
local MiscSection = MiscTab:CreateSection("Miscellaneous")

-- Add a keybind
MiscSection:CreateKeybind("Fly", "F", function()
    print("Fly keybind pressed")
end)

-- Add a textbox
MiscSection:CreateTextbox("Chat Message", "Type here...", function(Text)
    print("Chat message:", Text)
end)

-- Settings Tab
local ConfigSection = SettingsTab:CreateSection("Configuration")

-- Add configuration options
ConfigSection:CreateTextbox("Config Name", "Default", function(Text)
    print("Config name set to:", Text)
end)

ConfigSection:CreateButton("Save Config", function()
    print("Config saved")
    Library:Notification("Configuration", "Config Saved Successfully!", "OK")
end)

ConfigSection:CreateButton("Load Config", function()
    print("Config loaded")
    Library:Notification("Configuration", "Config Loaded Successfully!", "OK")
end)

-- UI Settings section
local UISection = SettingsTab:CreateSection("UI Settings")

UISection:CreateToggle("UI Toggle Keybind", true, function(Value)
    print("UI Toggle Keybind:", Value)
end)

UISection:CreateButton("Destroy GUI", function()
    Library:Notification("UI", "Destroying GUI...", "OK")
    -- In a real script, this would destroy the UI
end)

-- Show notification that UI loaded successfully
Library:Notification("SkyX UI", "SkyX UI Library has been loaded!", "OK")
