--[[    
    Simple OrionX UI for Executor
    Minimal example for Roblox executors
]]

-- Load the OrionX-UI library 
local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/SkyXhub/OrionX-UI/refs/heads/main/OrionX-UI'))()


-- Create a simple window
local Window = OrionLib:MakeWindow({
    Name = "Simple OrionX UI", 
    HidePremium = false,
    SaveConfig = true, 
    ConfigFolder = "SimpleOrionX"
})

-- Create a single tab
local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "home", 
    PremiumOnly = false
})

-- Add a section
local Section = MainTab:AddSection({
    Name = "Test Section"
})

-- Add a button
MainTab:AddButton({
    Name = "Click Me",
    Callback = function()
        OrionLib:MakeNotification({
            Name = "Button Clicked",
            Content = "It works!",
            Image = "check",
            Time = 5
        })
    end
})

-- Add a toggle
MainTab:AddToggle({
    Name = "Toggle",
    Default = false,
    Callback = function(Value)
        print("Toggle:", Value)
    end
})

-- Initialize the library
OrionLib:Init()
